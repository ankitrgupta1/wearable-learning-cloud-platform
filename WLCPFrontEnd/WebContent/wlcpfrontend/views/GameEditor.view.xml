<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:f="sap.f" xmlns:l="sap.ui.layout"
		controllerName="wlcpfrontend.controllers.GameEditor" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="gameEditor" title="Title" showHeader="false">
		<content>
			<tnt:ToolHeader>
				<Button id="sideNavigationToggleButton" icon="sap-icon://menu2" type="Transparent" press="onSideNavButtonPress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
				<ToolbarSpacer/>
				<Title level = "H3" text = "Wearable Learning Cloud Platform">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Title>
				<tnt:ToolHeaderUtilitySeparator />
				<ToolbarSpacer>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px" />
					</layoutData>
				</ToolbarSpacer>
				<f:Avatar displaySize="XS" initials="MM" press="handleAvatarPress"/>
				<Button icon = "sap-icon://user-settings" type="Transparent">
				</Button>
				<Button icon = "sap-icon://log" type="Transparent">
				</Button>
			</tnt:ToolHeader>
			<l:Splitter id="mainSplitter" height="100%" width="100%">
			<ScrollContainer id="toolbox" height="100%" width="240px" horizontal="false" vertical="true" focusable="true" class="scroll">
				<layoutData>
					<l:SplitterLayoutData size="240px" resizable="false"/>
				</layoutData>
				<TabContainer>
					<items>
						<TabContainerItem name="States" editable="false">
							<content>
								<VBox class="statepos">
									<Label text="Toolbar" class="toolbarLabel sapUiSmallMarginTopBottom"/>
<!-- 									<Button text="Add State" press="add2"/> -->
									<html:div id="toolboxDisplayState" class="state centerToolboxState stateBorderShadow">
										<html:div class="toolboxDisplayStateTopColor"><html:div class="centerText">Display Text</html:div></html:div>
										<html:div class="toolboxDisplayStateBottomColor"></html:div>
									</html:div>
									<html:div id="toolboxButtonPressState" class="state centerToolboxState stateBorderShadow" style="top:150px;">
										<html:div class="toolboxButtonPressStateTopColor"><html:div class="centerText">Button Input</html:div></html:div>
										<html:div class="toolboxButtonPressStateBottomColor"></html:div>
									</html:div>
									<html:div class="state centerToolboxState stateBorderShadow" style="top:300px;">
										<html:div class="toolboxBuzzerStateTopColor"><html:div class="centerText">Buzzer</html:div></html:div>
										<html:div class="toolboxBuzzerStateBottomColor"></html:div>
									</html:div>
									<html:div class="state centerToolboxState stateBorderShadow" style="top:450px;">
										<html:div class="toolboxLEDStateTopColor"><html:div class="centerText">LED</html:div></html:div>
										<html:div class="toolboxLEDStateBottomColor"></html:div>
									</html:div>
								</VBox>
							</content>
						</TabContainerItem>
						<TabContainerItem name="Transitions"></TabContainerItem>
					</items>
				</TabContainer>
			</ScrollContainer>
			<ScrollContainer id="pad" height="100%" horizontal="true" vertical="true" focusable="false">
			</ScrollContainer>
			</l:Splitter>
		</content>
	</Page>
</core:View>