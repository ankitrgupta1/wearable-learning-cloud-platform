<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table"
		controllerName="wlcpfrontend.controllers.Classes" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="classes" showHeader="false" title="Teacher's Classes">
		<content>
			<Panel>
				<Toolbar class="sapUiTinyMarginTopBottom">
					<Title text="Your Classes"/>
					<ToolbarSpacer/>
					<Button icon = "sap-icon://create" text="Create Class" type="Accept" press="CreateClass" tooltip="Click to create a new class"></Button>
					<Button id="editButton" icon = "sap-icon://edit" text="Enable Editing" press="EditClasses" tooltip="Click to allow editing the values in the table"></Button>
					<Button icon = "sap-icon://delete" text="Delete Selected" type="Reject" tooltip="Click to deleted a checked row(s)"></Button>
				</Toolbar>
					<t:Table id="classesTable" rows="{path : 'odata>/TeacherClasss', parameters : {expand : 'TeacherDetails,SchoolDetails,StudentDetails'}}" selectionMode="MultiToggle">
					<t:columns>
						<t:Column width="0px">
							<Label text="Class Id"/>
							<t:template>
								<Input value="{odata>TeacherClassId}" editable="false" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="Class Name" />
							<t:template>
								<Input value="{odata>TeacherClassName}" editable="false" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="Teacher"/>
							<t:template>
								<Input value="{odata>TeacherDetails/FirstName} {odata>TeacherDetails/LastName}" editable="false" wrapping="false"/>
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="School"/>
							<t:template>
								<Input value="{odata>SchoolDetails/SchoolName}" editable="false" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="Grade"/>
							<t:template>
								<Input value="{odata>Grade}" editable="false" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="Start Year"/>
							<t:template>
								<Input value="{odata>SchoolYearStart}" editable="false" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="End Year"/>
							<t:template>
								<Input value="{odata>SchoolYearEnd}" editable="false" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="Students"/>
							<t:template>
								<Button text="View" class="center" press="ViewEdit"/>
							</t:template>
						</t:Column>
					</t:columns>
				</t:Table>
			</Panel>
		</content>
	</Page>
</core:View>