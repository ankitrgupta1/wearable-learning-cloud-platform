<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table"
		controllerName="wlcpfrontend.controllers.Students" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="students" showHeader="true" title="School's Students" enableScrolling="false">
		<subHeader>
			<Toolbar>
				<SearchField width="100%" />
				<Button text="Upload CSV" type="Accept"/>
			</Toolbar>
		</subHeader>
		<TileContainer tiles="{path : 'odata>/Students', parameters : {expand : 'SchoolDetails'}}" >
			<StandardTile key="{odata>StudentId}" press="TilePress" number="{odata>StudentId}" numberUnit="Student ID" title="{odata>FirstName} {odata>LastName}" info="{odata>SchoolDetails/SchoolName}" icon="sap-icon://study-leave" />
		</TileContainer>
		<footer>
			<Toolbar design="Transparent">
				<ToolbarSpacer/>
					<Button icon="sap-icon://close-command-field" type="Transparent"/>
					<Button icon="sap-icon://navigation-left-arrow" type="Transparent"/>
					<Button icon="sap-icon://add" type="Accept"  press="CreateStudentPressed"/>
					<Button icon="sap-icon://navigation-right-arrow" type="Transparent"/>
					<Button icon="sap-icon://open-command-field" type="Transparent"/>
				<ToolbarSpacer/>
			</Toolbar>
		</footer>
	</Page>
</core:View>