<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:f="sap.f" xmlns:l="sap.ui.layout"
		controllerName="wlcpfrontend.controllers.MainToolpage" xmlns:html="http://www.w3.org/1999/xhtml">
		<tnt:ToolPage id="toolPage">
			<tnt:header>
				<tnt:ToolHeader>
					<Button id="sideNavigationToggleButton" icon="sap-icon://menu2" type="Transparent" press="onSideNavButtonPress">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
					</Button>
					<ToolbarSpacer/>
					<Title level = "H3" text = "Wearable Learning Cloud Platform">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
					</Title>
					<tnt:ToolHeaderUtilitySeparator />
					<ToolbarSpacer>
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px" />
						</layoutData>
					</ToolbarSpacer>
					<f:Avatar displaySize="XS" initials="MM" press="handleAvatarPress"/>
					<Button icon = "sap-icon://user-settings" type="Transparent">
					</Button>
					<Button icon = "sap-icon://log" type="Transparent">
					</Button>
				</tnt:ToolHeader>
			</tnt:header>
			<tnt:sideContent>
				<tnt:SideNavigation expanded="true" itemSelect="onItemSelect">
				<tnt:NavigationList items="{/navigation}">
					<tnt:NavigationListItem text="{title}" icon="{icon}" enabled="{enabled}" expanded="{expanded}" items="{items}" key="{key}">
						<tnt:NavigationListItem text="{title}" key="{key}" enabled="{enabled}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList items="{/fixedNavigation}">
						<tnt:NavigationListItem text="{title}" icon="{icon}">
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
				</tnt:SideNavigation>
			</tnt:sideContent>
			<tnt:mainContents>
				<NavContainer id="pageContainer">
					<pages>
						<ScrollContainer height="100%" vertical="true" class="sapUiMediumMarginBeginEnd">
						<Toolbar>
							<Label text="Dashboard" design="Bold"/>
						</Toolbar>
						<StandardTile type="Monitor" icon="sap-icon://hint" title="Classes"/>
						<StandardTile type="Monitor" icon="sap-icon://hint" title="Games"/>
						<StandardTile type="Monitor" icon="sap-icon://hint" title="Game Instances"/>
						<StandardTile type="Monitor" icon="sap-icon://hint" title="Students"/>
						<Toolbar>
							<Label text="Platform Status" design="Bold"/>
						</Toolbar>
						<l:HorizontalLayout class="sapUiSmallMarginTop">
							<Label text="Game Server" class="sapUiSmallMarginEnd"/>
							<ObjectStatus text="OFFLINE" state="Error" class="sapUiLargeMarginEnd"/>
							<Label text="Database" class="sapUiSmallMarginEnd"/>
							<ObjectStatus text="OFFLINE" state="Error" class="sapUiLargeMarginEnd"/>
							<Label text="OData" class="sapUiSmallMarginEnd"/>
							<ObjectStatus text="OFFLINE" state="Error"/>
						</l:HorizontalLayout>
						<Toolbar>
							<Label text="Resource Status" design="Bold"/>
						</Toolbar>
						<Label text="CPU Usage" class="sapUiSmallMarginTop"/>
						<ProgressIndicator class="sapUiSmallMarginBottom" percentValue="30" displayValue="30%" showValue="true" state="Success" />
						<Label text="Disk Usage" class="sapUiSmallMarginTop"/>
						<ProgressIndicator class="sapUiSmallMarginBottom" percentValue="56" displayValue="56%" showValue="true" state="Success" />
						<Label text="Network Usage" class="sapUiSmallMarginTop"/>
						<ProgressIndicator class="sapUiSmallMarginBottom" percentValue="5" displayValue="5%" showValue="true" state="Success" />
						</ScrollContainer>
<!-- 						<Page id="dashboard" showHeader="false" class="sapUiMediumMarginBeginEnd"> -->
<!-- 							<Toolbar> -->
<!-- 								<Label text="Dashboard" design="Bold"></Label> -->
<!-- 							</Toolbar> -->
<!-- 							<TileContainer> -->
<!-- 								<StandardTile type="Monitor" icon="sap-icon://hint" title="Hello"/> -->
<!-- 							</TileContainer> -->
<!-- 						</Page> -->
					</pages>
				</NavContainer>
			</tnt:mainContents>
		</tnt:ToolPage>
</core:View>