<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Dialog id="outputStateDialog" title="Configure...">
		<buttons>
			<Button text="Accept" type="Accept"/>
			<Button text="Close" type="Reject" press="closeDialog"/>
		</buttons>
		<IconTabBar items="{/iconTabs}" showOverflowSelectList="false" applyContentPadding="false">
			<items>
				<IconTabFilter icon="{icon}" text="{scope}">
					<content>
						<l:Splitter id="outputStateDialogSplitter">					
							<tnt:NavigationList class="navList">
								<tnt:layoutData><l:SplitterLayoutData size="202px" resizable="false"/></tnt:layoutData>
								<tnt:NavigationListItem text="Display Text" icon="sap-icon://discussion-2" select="navigationSelected" key="displayTextPage"/>
								<tnt:NavigationListItem text="Display Image" icon="sap-icon://background" select="navigationSelected" key="displayImagePage"/>
								<tnt:NavigationListItem text="Play Sound" icon="sap-icon://sound" select="navigationSelected"/>
								<tnt:NavigationListItem text="Light" icon="sap-icon://lightbulb" select="navigationSelected"/>
							</tnt:NavigationList>
							<NavContainer width="100%" height="300px">
								<Page title="{scope} Display Text">
									<Text text="{scope} ssssssssssssssssssssssssssssssssssssssssssssss"></Text>
								</Page>
							</NavContainer>
						</l:Splitter>
					</content>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Dialog>
</core:FragmentDefinition>