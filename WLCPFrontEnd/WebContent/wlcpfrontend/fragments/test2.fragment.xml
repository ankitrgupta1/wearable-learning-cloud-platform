	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Dialog title="Configure...">
		<buttons>
			<Button text="Accept" type="Accept"/>
			<Button text="Close" type="Reject" press="closeDialog"/>
		</buttons>
		<FlexBox alignItems="Start" justifyContent="Start">
			<items>
				<html:div style="height:522px;width:250px;border-style:solid;border-width:2px;border-color:#3f5161;border-top-style:none;border-left-style:none;border-bottom-style:none;">
					<tnt:NavigationList id="navigationList">
						<tnt:NavigationListItem text="Display Text" icon="sap-icon://discussion-2"/>
						<tnt:NavigationListItem text="Display Image" icon="sap-icon://background"/>
						<tnt:NavigationListItem text="Play Sound" icon="sap-icon://sound"/>
						<tnt:NavigationListItem text="Light" icon="sap-icon://lightbulb"/>
					</tnt:NavigationList>
				</html:div>
				<html:div style="height:500px;width:500px;">
					<NavContainer>
						<Page title="Display Text">
							<FlexBox alignItems="Start" justifyContent="End">
				<Button text="Add Text" type="Accept" press="addTextRow"></Button>
		</FlexBox>
		<t:Table id="displayTextTable" rows="{/data}" selectionMode="None">
			<t:columns>
				<t:Column hAlign="Center">
					<Label text="Scope"/>
					<t:template>
<!-- 						<Label text="{scope}" design="Bold"/> -->
						<MultiComboBox items="{row/scope}" selectionChange="handleSelectionChange"><core:Item key="{t}" text="{t}"></core:Item></MultiComboBox>
					</t:template>
				</t:Column>
				<t:Column hAlign="Center">
					<Label text="Text" />
					<t:template>
						<Input placeHolder="Text to display..."/>
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>
						</Page>
					</NavContainer>
				</html:div>
			</items>
		</FlexBox>
