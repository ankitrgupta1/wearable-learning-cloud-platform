<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Dialog title="Configure...">
		<buttons>
			<Button text="Accept" type="Accept"/>
			<Button text="Close" type="Reject" press="closeDialog"/>
		</buttons>
		<FlexBox alignItems="Start" justifyContent="Start">
			<items>
				<html:div style="height:500px;width:200px;border-style:solid;border-width:2px;border-color:#3f5161;border-top-style:none;border-left-style:none;border-bottom-style:none;">
					<tnt:NavigationList id="navigationList">
						<tnt:NavigationListItem text="Display Text" icon="sap-icon://discussion-2" select="navigationSelected" key="displayTextPage"/>
						<tnt:NavigationListItem text="Display Image" icon="sap-icon://background" select="navigationSelected" key="displayImagePage"/>
						<tnt:NavigationListItem text="Play Sound" icon="sap-icon://sound" select="navigationSelected"/>
						<tnt:NavigationListItem text="Light" icon="sap-icon://lightbulb" select="navigationSelected"/>
					</tnt:NavigationList>
				</html:div>
				<html:div style="height:500px;width:550px;">
					<NavContainer id="outputStateNavContainer">
						<Page id="displayTextPage" title="Display Text">
							<FlexBox alignItems="Start" justifyContent="End">
								<Button text="Add Text" type="Accept" press="addTextRow"></Button>
							</FlexBox>
							<t:Table id="displayTextTable" rows="{/displayTextData}" selectionMode="None">
								<t:columns>
									<t:Column hAlign="Center">
										<Label text="Scope"/>
										<t:template>
											<MultiComboBox items="{row/scope}" selectionChange="handleSelectionChange"><core:Item key="{text}" text="{text}"></core:Item></MultiComboBox>
										</t:template>
									</t:Column>
									<t:Column hAlign="Center">
										<Label text="Text" />
										<t:template>
											<Input placeHolder="Text to display..."/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</Page>
						<Page id="displayImagePage" title="Display Image">
						</Page>
					</NavContainer>
				</html:div>
			</items>
		</FlexBox>
	</Dialog>
</core:FragmentDefinition>