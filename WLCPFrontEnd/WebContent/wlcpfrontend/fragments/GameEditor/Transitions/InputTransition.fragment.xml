<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc">
	
	<Dialog id="outputStateDialog" title="Configure..." contentWidth="50%" contentHeight="50%">
		<buttons>
			<Button text="Accept" type="Accept"/>
			<Button text="Close" type="Reject" press="closeDialog"/>
		</buttons>
		<IconTabBar id="inputTransitionDialogIconTabBar" items="{/iconTabs}" showOverflowSelectList="false" applyContentPadding="false" expandable="false">
			<items>
				<IconTabFilter icon="{icon}" text="{scope}" key="{scope}">
					<content>
						<l:Splitter>
							<List class="navList" mode="SingleSelectLeft" headerText="Select the Transition Type" selectionChange="transitionTypeSelected"> 
								<layoutData><l:SplitterLayoutData size="250px" resizable="false"/></layoutData>
								<items>
									<StandardListItem title="Single Button Press" icon="sap-icon://touch" selected="{= ${activeTransition} === 'Single Button Press' ? true : false}"/>
									<StandardListItem title="Sequence Button Press" icon="sap-icon://multiselect-none" selected="{= ${activeTransition} === 'Sequence Button Press' ? true : false}"/>
								</items>
							</List>
							<NavContainer width="100%" height="500px">
								<layoutData><l:SplitterLayoutData minSize="500" resizable="false"/></layoutData>
								<Page title="{scope} Single Button Press">
									<FlexBox alignItems="Start" justifyContent="Center">
										<items>
											<VBox>
												<CheckBox text="Button 1" selected="{singlePress/0/selected}" enabled="{singlePress/0/enabled}" select="onChange"></CheckBox>
												<CheckBox text="Button 2" selected="{singlePress/1/selected}" enabled="{singlePress/1/enabled}" select="onChange"></CheckBox>
												<CheckBox text="Button 3" selected="{singlePress/2/selected}" enabled="{singlePress/2/enabled}" select="onChange"></CheckBox>
												<CheckBox text="Button 4" selected="{singlePress/3/selected}" enabled="{singlePress/3/enabled}" select="onChange"></CheckBox>
											</VBox>
										</items>
									</FlexBox>
								</Page>
								<Page title="{scope} Sequence Button Press">
									<content>
										<FlexBox alignItems="Start" justifyContent="Center">
											<items>
												<Button text="Add" press="addSequence"></Button>
											</items>
										</FlexBox>
										<FlexBox alignItems="Start" justifyContent="Center">
											<items>
												<List showSeparators="None" items="{path:'sequencePress', templateShareable:false}">
													<CustomListItem xmlns="sap.m">
														<content>
															<List showSeparators="None" items="{path:'buttons', templateShareable:false}">
																<StandardListItem/>
															</List>
														</content>
													</CustomListItem>
												</List>
											</items>
										</FlexBox>
									</content>
								</Page>
							</NavContainer>
						</l:Splitter>
					</content>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Dialog>
</core:FragmentDefinition>