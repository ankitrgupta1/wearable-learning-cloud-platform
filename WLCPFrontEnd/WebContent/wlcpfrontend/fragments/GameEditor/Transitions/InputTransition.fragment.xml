<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Dialog id="outputStateDialog" title="Configure..." contentWidth="50%" contentHeight="50%">
		<buttons>
			<Button text="Accept" type="Accept"/>
			<Button text="Close" type="Reject" press="closeDialog"/>
		</buttons>
		<IconTabBar id="inputTransitionDialogIconTabBar" items="{/iconTabs}" showOverflowSelectList="false" applyContentPadding="false" expandable="false">
			<items>
				<IconTabFilter icon="{icon}" text="{scope}" key="{scope}">
					<content>
						<l:Splitter>
							<List class="navList" mode="SingleSelectLeft" headerText="Select the Transition Type" selectionChange="transitionTypeSelected"> 
								<layoutData><l:SplitterLayoutData size="250px" resizable="false"/></layoutData>
								<items>
									<StandardListItem title="Single Button Press" icon="sap-icon://touch" selected="true"/>
									<StandardListItem title="Sequence Button Press" icon="sap-icon://multiselect-none"/>
								</items>
							</List>
							<NavContainer width="100%" height="500px">
								<layoutData><l:SplitterLayoutData minSize="500" resizable="false"/></layoutData>
								<Page title="{scope} Single Button Press">
									<FlexBox alignItems="Start" justifyContent="Center">
										<items>
											<VBox>
												<CheckBox text="Button 1" selected="{singlePress/button1}" enabled="{singlePress/button1Enabled}" select="onChange"></CheckBox>
												<CheckBox text="Button 2" selected="{singlePress/button2}" enabled="{singlePress/button2Enabled}" select="onChange"></CheckBox>
												<CheckBox text="Button 3" selected="{singlePress/button3}" enabled="{singlePress/button3Enabled}" select="onChange"></CheckBox>
												<CheckBox text="Button 4" selected="{singlePress/button4}" enabled="{singlePress/button4Enabled}" select="onChange"></CheckBox>
											</VBox>
										</items>
									</FlexBox>
								</Page>
								<Page title="{scope} Sequence Button Press">
								</Page>
							</NavContainer>
						</l:Splitter>
					</content>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Dialog>
</core:FragmentDefinition>